<p id="notice"><%= notice %></p>

<h1>Treinos</h1>
<div class="right-align">
  <%= link_to 'Novo Treino', new_treino_path, class:"btn" %>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treinos.each do |treino| %>
      <tr>
        <td><%= treino.nome %></td>
        <td><%= link_to 'Ver', treino %></td>
        <td><%= link_to 'Editar', edit_treino_path(treino) %></td>
        <td><%= link_to 'Excluir', treino, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
