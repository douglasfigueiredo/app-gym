<h1>Meus dados</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Sobrenome</th>
      <th scope="col">Data de nascimento</th>
      <th scope="col">GÃªnero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <th scope="row"><%= profile.first_name %></th>
        <td><%= profile.last_name %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.genre == "m" ? "Masculino" : "Feminino" %></td>
        <td><%= link_to 'Mostrar', user_profiles_path(profile), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', user_profiles_path(profile) , class: "btn btn-warning btn-sm"%></td>
        <td><%= link_to 'Deletar', user_profiles_path(profile) , method: :delete, data: { confirm: 'Cofirma?' } , class: "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

