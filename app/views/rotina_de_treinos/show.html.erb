<p id="notice"><%= notice %></p>
<br>
<br>
<div class="col s12 m12">
  <div class="card">
    <div class="card-content">
      <div class="row">
        <span class="card-title"> 
           <%= @rotina_de_treino.rotina.genero=="f" ? "Feminino" : "Masculino" %> | <small><%= @rotina_de_treino.rotina.nome %> | <%= @rotina_de_treino.treino.nome %> </small>
        </span> 
      </div>
      <div class="row">
        <strong>TIPOS DE EXERC√çCIOS:</strong>
        <ul class="collapsible">
          <% @rotina_de_treino.tipo_de_exercicio_do_treinos.each do |tipoDeExercicio| %>
            <li>
              <div class="collapsible-header">
                <i class="material-icons">add_circle_outline</i>
                <%= tipoDeExercicio.tipo_de_exercicio.nome %>
              </div>
              <div class="collapsible-body">
                <div class="collection">
                  <% tipoDeExercicio.tipo_de_exercicio.exercicios.each do |exercicio| %>
                    <div class="collection-item" style="display: flex;justify-content: space-between;">
                      <%= exercicio.nome %>
                      <a href="<%= exercicio.tutorial %>" target="_blank" class="">
                        <div class="chip">
                          Tutorial
                          <i class="close material-icons">attach_file</i>
                        </div>
                      </a>
                    </div>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="card-action" style="display: flex;justify-content: space-between;">
        <%= link_to 'Voltar', rotina_rotina_de_treinos_path, class:"btn grey" %>
        <%= link_to 'Editar', edit_rotina_rotina_de_treino_path(@rotina_de_treino), class:"btn"  %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.collapsible').collapsible();
  });
</script>