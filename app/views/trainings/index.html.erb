<div class="container">
  <h1 class="left">Lista de Treinos</h1>
  <%= link_to 'Adicionar Treino', new_training_path, :type =>"button", :class => "btn btn-primary align right" %>
</div>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Exercícios</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.title %></td>
        <td><%= link_to 'Adicionar Exercícios', training_item_trainings_path(training) %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
